{
  "editor.formatOnSaveMode": "file", // autoformat file on save (according to linter/formatter enabled for specific languages)
  "editor.formatOnSave": true, // enable autoformat on save
  "editor.codeActionsOnSave": {
    "source.organizeImports": true // organise python imports according to PEP8 on save
  },
  /*--- PYTHON ----*/
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "pylint.interpreter": ["./.venv/Scripts/python.exe"],
  "python.formatting.provider": "black", // formatting
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": true // type checking
}
